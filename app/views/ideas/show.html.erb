<div>
    <%= @idea.user.name %> says...
    <div class='textbox'>
        <%= @idea.content %>
    </div>
</div>

<h3>People who liked this post... </h3>
<table>
    <tr>
        <th>
            Alias
        </th>
        <th>
            Name
        </th>
    </tr>
    <% @idea.likes.each do |like| %>
        <tr>
            <td>
                <a href="/users/<%= like.user.id.to_s %>/">
                    <%= like.user.alias %>
                </a>
            </td>
            <td>
               <%= like.user.name %>
            </td>
        </tr>
    <% end %>
</table>
